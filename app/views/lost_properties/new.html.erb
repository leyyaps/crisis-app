<%= simple_form_for @lostproperty, :html => {:class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.input :name, :required => true, placeholder: "Enter name", :input_html => { :class => 'form-control' } %>
  </div>
  <%= f.input :email, :required => true, placeholder: "Enter email", :input_html => { :class => 'form-control' } %>
  <small class="text-muted">We never share your email with anyone else</small>
  <%= f.input :mobile, :required => true, placeholder: "Enter your mobile number", :input_html => { :class => 'form-control' } %>
  <small class="text-muted">We never share your mobile with anyone else.</small>
  <%= f.input :message, :as => :text, :required => true, placeholder: "Enter your message. Please do not use for lost property.", :input_html => { :class => 'form-control' } %>
  <div class= "hidden">
    <%= f.input :nickname, :hint => 'Leave this field blank!' %>
  </div>
  <div>
    </br>
    <%= f.button :submit, 'SEND MESSAGE', :class=> "btn btn-primary" %>
  </div>
<% end %>