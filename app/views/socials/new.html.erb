

<div data-scroll="toggle(.fromTopIn, .fromTopOut) once" class="hero-unit hero-4 animated fadeIn">
  <div class="container hero-content">
        <h1>Socials</h1>
        <h2>Book a social with us</h2>
  </div>
</div>


<div class="container">

<% flash.each do |key, value| %>
  <% alert_class = case key
                   when :notice then "success"
                   when :error then "danger"
                   else key
                   end %>
  <%= content_tag :div, class: "alert alert-#{alert_class}" do %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= value %>
  <% end %>
<% end %>
</div>
<div class="container">
<h2 data-scroll="toggle(.fromTopIn, .fromTopOut) once" class="mt-2">Social Booking Form</h2>
<p data-scroll="toggle(.fromTopIn, .fromTopOut) once" class="">Please complete our booking form if you are thinking of organising a social for your club, society or organisation. <span class="red">Please note that we are sadly unable to supply tickets for any social with less than 3 weeks notice.</span></p>

<%= simple_form_for @social, :html => {:class => 'form-horizontal' } do |f| %>
  <div data-scroll="toggle(.fromBottomIn, .fromBottomOut) once" class="form-group">
    <%= f.input :name, :required => true, placeholder: "Enter name", :input_html => { :class => 'form-control' } %>
  </div>
  <div data-scroll="toggle(.fromBottomIn, .fromBottomOut) once" class="form-group">
  <%= f.input :email, :required => true, placeholder: "Enter email", :input_html => { :class => 'form-control' } %>
  </div>
  <div data-scroll="toggle(.fromBottomIn, .fromBottomOut) once" class="form-group">
  <%= f.input :mobile, :required => true, placeholder: "Enter your mobile number", :input_html => { :class => 'form-control' } %>
  </div>
  <div data-scroll="toggle(.fromBottomIn, .fromBottomOut) once" class="form-group">
  <%= f.input :message, :as => :text, :required => true, placeholder: "Please tell us about your event and how we can help you.", :input_html => { :class => 'form-control' } %>
  </div>
  <div class= "hidden">
    <%= f.input :nickname, :hint => 'Leave this field blank!' %>
  </div>
  <div data-scroll="toggle(.fromBottomIn, .fromBottomOut) once">
    </br>
    <%= f.button :submit, 'SEND MESSAGE', :class=> "btn btn-primary" %>
  </div>
<% end %>

</div>