<div id="homepage-event-carousel" class="carousel slide animated fadeIn" data-ride="carousel" data-interval="3000">
  
  <div class="carousel-inner" role="listbox">
  <% @tickets.each_with_index do |ticket, index| %>
    <div class="carousel-item img-fluid <% if index == 0 %>active<% end %>">
      <%= image_tag ticket.cover_image_url(:thumb) if ticket.cover_image? %>
    </div>
<% end %>
    
  </div>
  <a class="left carousel-control" href="#homepage-event-carousel" role="button" data-slide="prev">
    <span class="icon-prev" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#homepage-event-carousel" role="button" data-slide="next">
    <span class="icon-next" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

